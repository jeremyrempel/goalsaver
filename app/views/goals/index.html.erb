<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Value</th>
      <th>Currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= link_to goal.name, goal %></td>
        <td><%= goal.date %></td>
        <td><%= goal.value %></td>
        <td><%= goal.currency %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Delete', goal, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goal', new_goal_path, class: "btn btn-primary active" %>
