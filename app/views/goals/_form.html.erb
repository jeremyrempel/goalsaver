<%= form_for(goal) do |f| %>
    <% if goal.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(goal.errors.count, "error") %> prohibited this goal from being saved:</h2>

          <ul>
            <% goal.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :start_date %>
      <%= f.date_select :start_date, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :end_date %>
      <%= f.date_select :end_date %>
    </div>

    <div class="form-group">
      <%= f.label :start_value %>
      <%= f.text_field :start_value, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :end_value %>
      <%= f.text_field :end_value, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :rate_of_savings %>
      <%= f.text_field :rate_of_savings, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :rate_of_return %>
      <%= f.text_field :rate_of_return, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :currency %>
      <%= f.select(:currency, ['CAD', 'USD'], {}, {:class => "form-control"}) %>
    </div>

    <div class="btn-group" role="group" aria-label="...">
      <%= f.submit 'Save', :class => "btn btn-primary active" %>
      <%= link_to 'Cancel', valuations_path, :class => "btn btn-default" %>
    </div>

<% end %>
