<p id="notice"><%= notice %></p>

<h1>Valuations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @valuations.each do |valuation| %>
      <tr>
        <td><%= link_to valuation.date, valuation %></td>
        <td><%= valuation.value %></td>
        <td><%= link_to 'Edit', edit_valuation_path(valuation), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Delete', valuation, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.asslibs.empty? %>
  Please add an asset/liability first
<% else %>
  <%= link_to 'New Valuation', new_valuation_path, class: 'btn btn-primary active' %>
<% end %>
